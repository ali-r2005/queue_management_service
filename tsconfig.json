{
  "compilerOptions": {
    /* === Basic Paths === */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* === Environment Settings === */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* === Node Types === */
    "types": ["node"],
    "lib": ["ESNext"],

    /* === Type Safety === */
    "strict": true,
    "skipLibCheck": true,

    /* === Source Maps for Debugging === */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
